<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pawel.infometeoeg.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="#F44336">
    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:wlv_borderColor="#8E24AA"
        app:wlv_borderWidth="3dp"
        app:wlv_progressValue="20"
        app:wlv_shapeType="rectangle"
        app:wlv_round_rectangle="true"
        app:wlv_triangle_direction="north"
        app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleCenterStrokeWidth="3dp"
        app:wlv_titleCenterColor="@android:color/white"
        app:wlv_titleCenterSize="24sp"
        app:wlv_waveAmplitude="40"
        app:wlv_waveColor="@color/white"/>
    <com.romainpiel.shimmer.ShimmerTextView
        android:layout_centerHorizontal="true"
        android:id="@+id/shimmer_tv"
        android:text="@string/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:reflectionColor="@color/red"
        android:textSize="50sp" />

    <info.hoang8f.widget.FButton
        android:id= "@+id/test"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shimmer_tv"
        android:text="@string/p_dzis"
        android:textColor="@color/black"
        app:buttonColor="@color/white"
        app:shadowColor="@color/silver"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="10dp" />
    <info.hoang8f.widget.FButton
        android:id= "@+id/test1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test"
        android:text="@string/p_5dni"
        android:textColor="@color/black"
        app:buttonColor="@color/white"
        app:shadowColor="@color/silver"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="10dp" />
    <info.hoang8f.widget.FButton
        android:id= "@+id/test2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test1"
        android:text="@string/alert"
        android:textColor="@color/black"
        app:buttonColor="@color/white"
        app:shadowColor="@color/silver"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="10dp" />
    <ImageView
        android:id="@+id/prognoza"
        android:layout_below="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:contentDescription=""
        android:layout_marginBottom="0dp" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/prognoza"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

</RelativeLayout>
